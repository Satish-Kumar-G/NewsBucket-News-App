<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myWidget"
    android:background="@color/blue"
    android:padding="@dimen/widget_margin">



   <ImageView
       android:padding="@dimen/normal_padding"
       android:id="@+id/widget_imageView"
       android:src="@drawable/newsbucketpromo"
       android:contentDescription="@string/imageview_in_full_description"
       android:layout_width="@dimen/article_image_width"
       android:layout_height="@dimen/article_image_height" />
    <TextView
        android:id="@+id/widget_textView"
        android:text="@string/app_name"
        android:textSize="@dimen/widget_text_size"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="match_parent" />

</LinearLayout>